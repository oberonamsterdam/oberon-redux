{
  "name": "oberon-redux",
  "version": "0.2.1",
  "description": "Update your redux state directly from your components. No reducers, no actions. ",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run build && jest",
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf lib/",
    "build:lib": "babel src --out-dir lib",
    "build:flow": "flow-copy-source -v src lib",
    "build:docs": "documentation build src/index.js -f md > api.md"
  },
  "author": "Richard van Willegen",
  "license": "MIT",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/oberonamsterdam/oberon-redux"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.16.0",
    "eslint-config-oberon": "^1.1.3",
    "flow-bin": "^0.64.0",
    "flow-copy-source": "^1.3.0",
    "jest": "^22.1.4",
    "rimraf": "^2.6.2"
  },
  "PeerDependencies": {
    "redux": "^3.0.0",
    "redux-thunk": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "oberon"
  },
  "dependencies": {
    "dot-prop": "^4.2.0",
    "snake-case": "^2.1.0",
    "typeof-is": "^1.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
